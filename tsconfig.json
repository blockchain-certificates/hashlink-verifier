{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "target": "es6",
    "lib": ["es2018", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "module": "ES2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "lib/esm"
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "tests",
    "lib"
  ]
}
