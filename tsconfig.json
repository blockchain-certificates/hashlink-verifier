{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "diagnostics": true,
    "explainFiles": true,
    "noImplicitAny": false,
    "target": "ESNext",
    "importsNotUsedAsValues": "error",
    "module": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "lib/esm"
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "test",
    "lib"
  ]
}
