{
  "name": "@blockcerts/hashlink-verifier",
  "version": "0.0.0-dev",
  "description": "Handling hashlinks in Blockcerts",
  "main": "dist/HashlinkVerifier.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dts:bundle": "dts-bundle-generator -o ./dist/index.d.ts --project tsconfig.json --no-banner src/HashlinkVerifier.ts",
    "build": "rollup -c && npm run dts:bundle",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --maxWorkers=4 --silent --noStackTrace --coverage",
    "test:coverage:report": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blockchain-certificates/hashlink-verifier.git"
  },
  "keywords": [
    "hashlink",
    "verifiable",
    "credentials",
    "blockcerts",
    "blockchain",
    "certificates"
  ],
  "author": "Julien Fraichot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blockchain-certificates/hashlink-verifier/issues"
  },
  "homepage": "https://github.com/blockchain-certificates/hashlink-verifier#readme",
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-jest": "^27.5.1",
    "codecov": "^3.8.3",
    "dts-bundle-generator": "^6.5.0",
    "eslint": "^7.32.0",
    "eslint-config-semistandard": "^16.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "rollup": "^2.70.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-polyfill-node": "^0.8.0",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "hashlink": "github:blockchain-certificates/hashlink"
  }
}
